#!/bin/bash
touch /tmp/battery_fifo
tail -f -n 0 /tmp/battery_fifo | while read line; do
	sleep 0.5
	notify=$CHORD_PLUGGED
	plugged=true
	if [[ $(acpi | cut -d " " -f 3) == *Discharging* ]]; then
		notify=$notify" Ã—"
		pkill compton
		bspc config border_width 1
	else
		/home/olli/bin/compton &
		bspc config border_width 0
	fi
	notify-no-icon $notify
	update_wallpaper
done
