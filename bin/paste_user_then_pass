#!/bin/bash
touch /tmp/pass_clipped_fifo
(inotifywait -e close_write /tmp/pass_clipped_fifo >/dev/null 2>&1
 user_pass=$(cat /tmp/pass_clipped_fifo | gpg -d -r olli.raitio@helsinki.fi --no-tty 2>/dev/null)
 pass=$(echo "$user_pass" | head -n 1)
 user=$(echo "$user_pass" | grep "user" | awk -F ":" '{print $2}' | awk '{print $1}')
 xdotool keyup Super_L Shift_L Control_L
 xdotool type $user
 xdotool key Return
 sleep 0.1
 xdotool type $pass
 notify-no-icon "$UNLOCKED pasted $(cat /tmp/pass_picked)"
 ) &
get_pass $1
